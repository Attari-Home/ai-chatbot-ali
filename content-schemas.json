{
  "TeamMember": {
    "type": "object",
    "required": ["id", "name", "role", "status"],
    "properties": {
      "id": {"type": "string"},
      "name": {"type": "string", "minLength": 2, "maxLength": 50},
      "role": {"type": "string", "enum": ["Captain", "Co-Captain", "Lead Programmer", "Lead Builder", "Lead Designer", "Programmer", "Builder", "Designer", "Scout", "Driver", "Mentor", "Coach", "Alumni"]},
      "status": {"type": "string", "enum": ["Active", "Alumni", "Mentor"]},
      "grade": {"type": "integer", "minimum": 6, "maximum": 12},
      "joinDate": {"type": "string", "format": "date"},
      "bio": {"type": "string", "maxLength": 500},
      "skills": {"type": "array", "items": {"type": "string"}},
      "achievements": {"type": "array", "items": {"type": "string"}},
      "avatar": {"type": "string", "format": "uri"},
      "socialLinks": {
        "type": "object",
        "properties": {
          "github": {"type": "string", "format": "uri"},
          "linkedin": {"type": "string", "format": "uri"}
        }
      }
    },
    "example": {
      "id": "tm001",
      "name": "Ali Ahmed",
      "role": "Captain",
      "status": "Active",
      "grade": 11,
      "joinDate": "2023-09-01",
