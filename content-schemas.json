      "socialLinks": {
        "github": "https://github.com/ali-ahmed"
      }
    }
  },
  "Project": {
    "type": "object",
    "required": ["id", "title", "status", "season"],
    "properties": {
      "id": {"type": "string"},
      "title": {"type": "string", "minLength": 5, "maxLength": 100},
      "description": {"type": "string", "maxLength": 1000},
      "status": {"type": "string", "enum": ["Active", "Completed", "Archived"]},
      "season": {"type": "string", "pattern": "^\\d{4}-\\d{4}$"},
      "game": {"type": "string"},
      "startDate": {"type": "string", "format": "date"},
      "endDate": {"type": "string", "format": "date"},
      "teamMembers": {"type": "array", "items": {"type": "string"}},
      "technologies": {"type": "array", "items": {"type": "string"}},
      "achievements": {"type": "array", "items": {"type": "string"}},
      "media": {
        "type": "object",
        "properties": {
          "images": {"type": "array", "items": {"type": "string", "format": "uri"}},
          "videos": {"type": "array", "items": {"type": "string", "format": "uri"}},
          "documentation": {"type": "string", "format": "uri"}
        }
      },
      "repository": {"type": "string", "format": "uri"},
      "weight": {"type": "number"},
      "dimensions": {"type": "string"}
    },
    "example": {
      "id": "proj001", 
      "title": "Rapid React Robot 2024",
      "description": "Our competition robot designed for the FRC Rapid React game, featuring autonomous ball collection and shooting mechanisms.",
      "status": "Completed",
      "season": "2023-2024",
      "game": "FRC Rapid React",
      "startDate": "2023-09-15",
      "endDate": "2024-04-15",
